    "zod": "^3.23.8"
  },
  "engines": {
    "node": ">=20.15.1",
    "yarn": "please-use-npm",
    "npm": ">=10.8.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
