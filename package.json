    "@typescript-eslint/parser": "^8.16.0",
    "commitlint": "^19.6.0",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.12.0",
